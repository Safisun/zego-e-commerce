/* components/live-room/index.wxss */
.live-room-container {
    position: relative;
    width: 100vw;
    height: 100vh;
}
.push-content {
    width: 100vw;
    height: 100vh;
}
.poster {
    position: relative;
    margin-top: 400px;
    width: 30px;
    height: 30px;
}
.poster image {
    width: 100%;
    height: 100%;
}
.img-box {
    width: 100px;
    height: 20px;
}
.img-box text {
    height: 100%;
    width: 100%;
    color: #fff;
}
.operate {
    position: absolute;
    top: 0;
    z-index: 2;
}